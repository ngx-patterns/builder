{
  "name": "@ngx-patterns/builder",
  "version": "0.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint --project .",
    "compile": "tsc --project .",
    "prepare": "run-s clean lint test compile",
    "watch": "run-s clean dev",
    "dev": "run-p \"compile -- --watch\" \"test -- --notify --watch\"",
    "test": "jest --verbose",
    "git-add": "git add .",
    "git-push": "git push --follow-tags origin master",
    "new-version": "standard-version --commit-all",
    "release": "run-s prepare git-add new-version git-push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngx-patterns/builder.git"
  },
  "author": "Marvin Luchs <marvin@luchs.org>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ngx-patterns/builder/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/ngx-patterns/builder#readme",
  "devDependencies": {
    "@types/jest": "23.3.0",
    "jest": "23.4.1",
    "npm-run-all": "4.1.3",
    "rimraf": "2.6.2",
    "standard-version": "4.4.0",
    "ts-jest": "23.0.0",
    "tslint": "5.11.0",
    "tslint-config-luchsamapparat": "1.3.0",
    "typescript": "2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  }
}
